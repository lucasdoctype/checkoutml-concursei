NODE_ENV=development
PORT=3005
HOST=0.0.0.0
API_BASE_PATH=/functions/v1
CORS_ORIGIN=
LOG_LEVEL=info

# Database (Postgres) - use one of DATABASE_URL or SUPABASE_DB_URL
DATABASE_URL=

# Supabase (required when DATABASE_URL is not set)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_WEBHOOK_SECRET=
MERCADOPAGO_WEBHOOK_TOLERANCE_SEC=300

# RabbitMQ (docker-compose)
RABBITMQ_DEFAULT_USER=
RABBITMQ_DEFAULT_PASS=

# RabbitMQ (app)
RABBITMQ_URL=amqp://guest:guest@localhost:5672
MQ_EXCHANGE_EVENTS=mercadopago.events
MQ_EXCHANGE_DLX=mercadopago.dlx
MQ_QUEUE_PROCESS=mercadopago.events.process
MQ_QUEUE_DLQ=mercadopago.events.dlq
RETRY_TTLS_MS=10000,60000,600000,3600000
MAX_ATTEMPTS=5

INTERNAL_API_TOKEN=123

