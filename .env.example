NODE_ENV=development
PORT=3005
HOST=0.0.0.0
API_BASE_PATH=/functions/v1
CORS_ORIGIN=
LOG_LEVEL=info

# Database (Postgres) - use one of DATABASE_URL or SUPABASE_DB_URL
DATABASE_URL=
SUPABASE_DB_URL=

# Supabase (required when DATABASE_URL is not set)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_WEBHOOK_SECRET=
MERCADOPAGO_WEBHOOK_TOLERANCE_SEC=300
MERCADOPAGO_WEBHOOK_STRICT_SIGNATURE=true
MERCADOPAGO_BASE_URL=https://api.mercadopago.com
MERCADOPAGO_NOTIFICATION_URL=
MERCADOPAGO_TIMEOUT_MS=10000

# RabbitMQ (docker-compose)
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
